<h1>Listing patients</h1>

<table class="table">
  <tr>
    <th>MR</th>
    <th>Name</th>
    <th>Birth</th>
    <th>Gender</th>
    <th>Status</th>
    <th>Viewed count</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= "MR"+"0"*(6-patient.id.to_s.length)+patient.id.to_s %></td>
    <td><%= patient.last_name+', '+patient.first_name+' '+patient.middle_name %></td>
    <td><%= patient.birth %></td>
    <td><%= patient.gender %></td>
    <td><%= patient.status %></td>
    <td><%= patient.viewed_count %></td>
    <td><%= patient.location.name %></td>
    <td><%= link_to 'Show', patient %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

