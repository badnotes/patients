<h1>Listing patients</h1>

<table class="table">
  <tr>
    <th>MR</th>
    <th>Name</th>
    <th>Birth</th>
    <th>Gender</th>
    <th>Status</th>
    <th>Viewed count</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= "MR"+"0"*(6-patient.id.to_s.length)+patient.id.to_s %></td>
    <td><%= patient.last_name+', '+patient.first_name+' '+patient.middle_name %></td>
    <td><%= patient.birth %></td>
    <td><%= patient.gender %></td>
    <td><%= patient.status %></td>
    <td><%= patient.viewed_count %></td>
    <td><%= patient.location.name %></td>
    <td><%= link_to I18n.t('show'), patient, class: "btn btn-primary" %></td>
    <td><%= link_to I18n.t('edit'), edit_patient_path(patient), class: "btn btn-info" %></td>
    <td><%= link_to I18n.t('delete'), patient, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to I18n.t('new'), new_patient_path,class: "btn btn-large btn-primary" %>
