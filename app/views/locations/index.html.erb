<h1>Listing locations</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.code %></td>
    <td><%= link_to I18n.t('show'), location, class: "btn btn-primary" %></td>
    <td><%= link_to I18n.t('edit'), edit_location_path(location), class: "btn btn-info" %></td>
    <td><%= link_to I18n.t('delete'), location, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to I18n.t('new'), new_location_path,class: "btn btn-large btn-primary" %>
